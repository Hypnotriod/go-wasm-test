{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Go build wasm",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-o",
                "./public/test.wasm",
                "./cmd/wasm/main.go"
            ],
            "options": {
                "env": {
                    "GOOS": "js",
                    "GOARCH": "wasm"
                }
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Go run file server",
            "type": "shell",
            "command": "go",
            "args": [
                "run",
                "./cmd/http/main.go"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}